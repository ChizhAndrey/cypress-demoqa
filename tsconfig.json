{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["cypress", "node"],
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["cypress/support/utility/*"],
    }
  },
  "include": ["**/*", "cypress/support/types"],
  "exclude": ["node_modules"]
}